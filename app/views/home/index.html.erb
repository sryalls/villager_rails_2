<!DOCTYPE html>
<html>
<head>
  <title>Villager</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_importmap_tags %>
  <style>
    .hex-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 0; /* No gap needed as we will position hexagons manually */
      position: relative;
      width: 100%;
      height: 100%;
    }
    .hex-button {
      width: 200px;
      height: 200px;
      position: absolute;
    }
  </style>
</head>
<body>
  <h1>Welcome to Villager</h1>
  <p>This is the homepage of your new Rails application.</p>
  <div class="hex-container">

    <% 3.times do |col| %>
      <div data-controller="hex-button" class="hex-button" data-row="1" data-col="<%= col %>" data-spacer="1"></div>
    <% end %>
    <% 4.times do |col| %>
      <div data-controller="hex-button" class="hex-button" data-row="2" data-col="<%= col %>" data-spacer="1"></div>
    <% end %>
    <% 5.times do |col| %>
      <div data-controller="hex-button" class="hex-button" data-row="3" data-col="<%= col %>" data-spacer="0"></div>
    <% end %>
    <% 4.times do |col| %>
      <div data-controller="hex-button" class="hex-button" data-row="4" data-col="<%= col %>" data-spacer="1"></div>
    <% end %>
    <% 3.times do |col| %>
      <div data-controller="hex-button" class="hex-button" data-row="5" data-col="<%= col %>" data-spacer="1"></div>
    <% end %>
  </div>
</body>
</html>